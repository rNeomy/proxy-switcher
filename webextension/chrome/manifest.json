{
  "name": "Proxy Switcher and Manager",
  "short_name": "proxy-switcher",
  "description": "Manage and switch between multiple proxies quickly and easily through profiles",
  "author": "Richard Neomy",
  "version": "0.4.0",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [
    "storage",
    "notifications",
    "proxy",
    "*://*/*",
    "webRequest"
  ],
  "storage": {
    "managed_schema": "schema.json"
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png"
    },
    "default_popup": "data/panel/index.html"
  },
  "background": {
    "scripts": [
      "data/panel/utils.js",
      "common.js"
    ]
  },
  "homepage_url": "http://add0n.com/proxy-switcher.html",
  "icons": {
    "16": "data/icons/16.png",
    "48": "data/icons/48.png",
    "128": "data/icons/128.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  }
}
